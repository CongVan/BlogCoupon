    <style>
        .box {
            width: 200px;
            height: 300px;
            position: relative;
            border: 1px solid #BBB;
            background: #EEE;
        }

        .ribbon {
            position: absolute;
            right: -5px;
            top: -5px;
            z-index: 1;
            overflow: hidden;
            width: 75px;
            height: 75px;
            text-align: right;
        }

            .ribbon span {
                font-size: 15px;
                font-weight: bold;
                color: #FFF;
                text-transform: uppercase;
                text-align: center;
                /*line-height: 20px;*/
                transform: rotate(45deg);
                -webkit-transform: rotate(45deg);
                width: 100px;
                display: block;
                background-image: linear-gradient(to top, #f77062 0%, #fe5196 100%); /*background: #ff4444;*/
